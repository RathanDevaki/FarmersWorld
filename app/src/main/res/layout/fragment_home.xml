<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    >
    <LinearLayout
        android:background="@drawable/crop_bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="220dp">

        <LinearLayout
            android:background="@drawable/button_rounded_corners_blue"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/main_product_exchange"

            >

            <ImageView
                android:padding="8dp"
                android:layout_gravity="left"
                android:id="@+id/imageView3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/goods_exchange" />

            <TextView
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:text="Product Exchange"

                />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button_rounded_corners_blue"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/farmer_voice"
            >

            <ImageView
                android:padding="8dp"
                android:layout_gravity="left"
                android:id="@+id/discussion_image"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/discussion" />

            <TextView
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:id="@+id/discussion_text"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="Farmer Voice"

                />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button_rounded_corners_blue"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/working_opportunity"
            >

            <ImageView
                android:padding="8dp"
                android:layout_gravity="left"
                android:id="@+id/opportunity_img"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/opportunity" />

            <TextView

                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:id="@+id/opportunity_text"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="Working Opportunity"

                />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button_rounded_corners_blue"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/chat"
            >

            <ImageView
                android:padding="8dp"
                android:layout_gravity="left"
                android:id="@+id/chat_image"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/chat" />

            <TextView

                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:id="@+id/chat_text"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="Chat with others"

                />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>